<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:gravity="center"
        android:text="@string/travel_photo_app"
        android:textSize="25sp"

        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="500dp"
        android:layout_height="400dp">

        <ImageView
            android:id="@+id/images0"
            android:layout_width="419dp"
            android:layout_height="670dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/images0"
            tools:ignore="ContentDescription,MissingConstraints,VisualLintBounds"
            tools:layout_editor_absoluteX="-12dp" />


        <ImageView
            android:id="@+id/images1"
            android:layout_width="419dp"
            android:layout_height="670dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/images1"
            android:alpha="0"
            tools:ignore="ContentDescription,MissingConstraints,VisualLintBounds"
            tools:layout_editor_absoluteX="-12dp" />

        <ImageView
            android:id="@+id/images2"
            android:layout_width="419dp"
            android:layout_height="670dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/images2"
            android:alpha="0"
            tools:ignore="ContentDescription,MissingConstraints,VisualLintBounds"
            tools:layout_editor_absoluteX="-10dp" />

        <ImageView
            android:id="@+id/images3"
            android:layout_width="419dp"
            android:layout_height="670dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/images3"
            android:alpha="0"
            tools:ignore="ContentDescription,MissingConstraints,VisualLintBounds"
            tools:layout_editor_absoluteX="-11dp" />

        <ImageView
            android:id="@+id/images4"
            android:layout_width="419dp"
            android:layout_height="670dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/images4"
            android:alpha="0"
            tools:ignore="ContentDescription,MissingConstraints,VisualLintBounds"
            tools:layout_editor_absoluteX="-11dp" />

        <ImageView
            android:id="@+id/images5"
            android:layout_width="419dp"
            android:layout_height="670dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/images5"
            android:alpha="0"
            tools:ignore="ContentDescription,MissingConstraints,VisualLintBounds"
            tools:layout_editor_absoluteX="-11dp" />

        <ImageView
            android:id="@+id/images6"
            android:layout_width="419dp"
            android:layout_height="670dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/images6"
            android:alpha="0"
            tools:ignore="ContentDescription,MissingConstraints,VisualLintBounds"
            tools:layout_editor_absoluteX="-11dp" />

        <ImageView
            android:id="@+id/images7"
            android:layout_width="419dp"
            android:layout_height="670dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/images7"
            android:alpha="0"
            tools:ignore="ContentDescription,MissingConstraints,VisualLintBounds"
            tools:layout_editor_absoluteX="-11dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_rew"
            android:contentDescription="@string/previous_button_description"/>

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/next_button_description"
            app:srcCompat="@android:drawable/ic_media_ff" />

    </LinearLayout>

    <TextView
        android:id="@+id/tVName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@color/black"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/hiranyakeshi" />
</LinearLayout>